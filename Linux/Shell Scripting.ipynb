   "source": [
    "#declaring a variable\n",
    "VAR=1\n",
    "while [ $VAR -le 10 ]\n",
    "do\n",
    "       echo \"The vale is: $VAR\"\n",
    "       #Incrementing the variable by 1\n",
    "       (( VAR++ ))\n",
    "done"
